@model CatFormViewModel
@{
    ViewData["Title"] = "Add a Cat";
}
<h2>Add a Cat</h2>
<form asp-controller="Cats" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <small asp-validation-for="Name" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label asp-for="BirthDateText"></label>
        <input asp-for="BirthDateText" class="form-control" />
        <small asp-validation-for="BirthDateText" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label asp-for="BreedId"></label>
        <select asp-for="BreedId" asp-items="Model.Breeds" class="form-control">
            <option disabled selected value="">Please select...</option>
        </select>
        <small asp-validation-for="BreedId" class="form-text text-muted"></small>
    </div>
    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <small asp-validation-for="Weight" class="form-text text-muted"></small>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

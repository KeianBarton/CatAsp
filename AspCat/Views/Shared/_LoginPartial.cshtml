@using Microsoft.AspNetCore.Identity
@using AspCat.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
        <ul class="my-2 my-lg-0 navbar-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link">Hello @user.Name!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-default ml-3">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="my-2 my-lg-0 navbar-nav">
        <li class="nav-item">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Log in</a>
        </li>
    </ul>
}
